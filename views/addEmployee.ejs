    <body>
        <%- include('../views/header.ejs');-%>
        <div class="container-fluid mt-5">
            <div class="row justify-content-center d-flex">
                <div class="col-md-6 ">
                    <h2>Add New Employees</h2>
                    <form action="/employee_db/addEmployee" method="POST">
                        <div class="form-group">
                            <input type="text" name="employee_name" class="form-control" placeholder="Enter Employee Name ...">
                        </div>
                        <div class="form-group">
                            <input type="text" name="employee_designation" class="form-control" placeholder="Enter Employee Designation ...">
                        </div>
                        <div class="form-group">
                            <input type="text" name="employee_salary" class="form-control" placeholder="Enter Employee Salary ...">
                        </div>
                        <button class="btn btn-success btn-block">Add</button>
                    </form>
                </div>
            </div>

        </div>
    </body>
